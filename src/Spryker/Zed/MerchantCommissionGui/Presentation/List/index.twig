{% block head_title widget_title %}
{% block section_title widget_title %}

{% block action %}
    {{ createActionButton(url('/merchant-commission-gui/import'), 'Import' | trans) }}
    {{ viewActionButton(url('/merchant-commission-gui/export'), 'Export' | trans) }}
